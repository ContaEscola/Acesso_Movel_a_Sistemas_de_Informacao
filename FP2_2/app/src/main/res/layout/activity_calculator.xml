<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.calculator.CalculatorActivity">

    <RelativeLayout
        android:id="@+id/CalculatorAct_Rl_console"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/grey_400"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/CalculatorAct_Tv_Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text=""
            android:textSize="32sp"
            android:textColor="@color/blackish"
            android:textStyle="bold"

            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/CalculatorAct_Rl_console"
        android:paddingTop="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">


            <Button
                android:id="@+id/CalculatorAct_Btn_1"
                android:onClick="OperationsBtn_OnClick"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/grey_200"
                android:text="1"
                android:textSize="24sp"
                android:textColor="@color/blackish"
                android:textStyle="bold" />

            <Button
                android:id="@+id/CalculatorAct_Btn_2"
                android:onClick="OperationsBtn_OnClick"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/CalculatorAct_Btn_1"
                android:backgroundTint="@color/grey_200"
                android:text="2"
                android:textSize="24sp"
                android:textColor="@color/blackish"
                android:textStyle="bold" />

            <Button
                android:id="@+id/CalculatorAct_Btn_3"
                android:onClick="OperationsBtn_OnClick"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/CalculatorAct_Btn_2"
                android:backgroundTint="@color/grey_200"
                android:text="3"
                android:textSize="24sp"
                android:textColor="@color/blackish"
                android:textStyle="bold" />

            <Button
                android:id="@+id/CalculatorAct_Btn_Divide"
                android:onClick="OperationsBtn_OnClick"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/CalculatorAct_Btn_3"
                android:backgroundTint="@color/orange"
                android:text="/"
                android:textSize="24sp"
                android:textColor="@color/blackish"
                android:textStyle="bold" />


            <Button
                android:id="@+id/CalculatorAct_Btn_4"
                android:onClick="OperationsBtn_OnClick"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_below="@id/CalculatorAct_Btn_1"
                android:backgroundTint="@color/grey_200"
                android:layout_marginTop="5dp"
                android:text="4"
                android:textSize="24sp"
                android:textColor="@color/blackish"
                android:textStyle="bold" />

            <Button
                android:id="@+id/CalculatorAct_Btn_5"
                android:onClick="OperationsBtn_OnClick"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_below="@id/CalculatorAct_Btn_2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/CalculatorAct_Btn_4"
                android:backgroundTint="@color/grey_200"
                android:text="5"
                android:textSize="24sp"
                android:textColor="@color/blackish"
                android:textStyle="bold" />

            <Button
                android:id="@+id/CalculatorAct_Btn_6"
                android:onClick="OperationsBtn_OnClick"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_below="@id/CalculatorAct_Btn_3"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/CalculatorAct_Btn_5"
                android:backgroundTint="@color/grey_200"
                android:text="6"
                android:textSize="24sp"
                android:textColor="@color/blackish"
                android:textStyle="bold" />

            <Button
                android:id="@+id/CalculatorAct_Btn_Multiply"
                android:onClick="OperationsBtn_OnClick"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/CalculatorAct_Btn_Divide"
                android:layout_toRightOf="@id/CalculatorAct_Btn_6"
                android:backgroundTint="@color/orange"
                android:text="*"
                android:textSize="24sp"
                android:textColor="@color/blackish"
                android:textStyle="bold" />


            <Button
                android:id="@+id/CalculatorAct_Btn_7"
                android:onClick="OperationsBtn_OnClick"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_below="@id/CalculatorAct_Btn_4"
                android:backgroundTint="@color/grey_200"
                android:layout_marginTop="5dp"
                android:text="7"
                android:textSize="24sp"
                android:textColor="@color/blackish"
                android:textStyle="bold" />

            <Button
                android:id="@+id/CalculatorAct_Btn_8"
                android:onClick="OperationsBtn_OnClick"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_below="@id/CalculatorAct_Btn_5"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/CalculatorAct_Btn_7"
                android:backgroundTint="@color/grey_200"
                android:text="8"
                android:textSize="24sp"
                android:textColor="@color/blackish"
                android:textStyle="bold" />

            <Button
                android:id="@+id/CalculatorAct_Btn_9"
                android:onClick="OperationsBtn_OnClick"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_below="@id/CalculatorAct_Btn_6"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/CalculatorAct_Btn_8"
                android:backgroundTint="@color/grey_200"
                android:text="9"
                android:textSize="24sp"
                android:textColor="@color/blackish"
                android:textStyle="bold" />

            <Button
                android:id="@+id/CalculatorAct_Btn_Add"
                android:onClick="OperationsBtn_OnClick"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/CalculatorAct_Btn_Multiply"
                android:layout_toRightOf="@id/CalculatorAct_Btn_9"
                android:backgroundTint="@color/orange"
                android:text="+"
                android:textSize="24sp"
                android:textColor="@color/blackish"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/CalculatorAct_Ll_Enter"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_below="@id/CalculatorAct_Btn_7"
                >

                <Button
                    android:id="@+id/CalculatorAct_Btn_0"
                    android:onClick="OperationsBtn_OnClick"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/grey_200"
                    android:text="0"
                    android:textSize="24sp"
                    android:textColor="@color/blackish"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/CalculatorAct_Btn_Enter"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/grey_200"
                    android:text="Enter"
                    android:textSize="24sp"
                    android:textColor="@color/blackish"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/CalculatorAct_Btn_Subtract"
                    android:onClick="OperationsBtn_OnClick"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/orange"
                    android:text="-"
                    android:textSize="24sp"
                    android:textColor="@color/blackish"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_below="@id/CalculatorAct_Ll_Enter"
                >

                <Button
                    android:id="@+id/CalculatorAct_Btn_Clear"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey_200"
                    android:text="AC"
                    android:textSize="24sp"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/CalculatorAct_Btn_Undo"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/grey_200"
                    android:text="&lt;--"
                    android:textSize="24sp"
                    android:textColor="@color/blackish"
                    android:textStyle="bold" />


            </LinearLayout>



        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>