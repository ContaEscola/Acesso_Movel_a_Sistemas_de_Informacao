<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dynamic_data.DynamicFragment">


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/DynamicDataFrag_Iv_BookCoverPlaceholder"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/DynamicDataAct_Tv_TitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Título:"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/DynamicDataFrag_Iv_BookCoverPlaceholder"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/DynamicDataFrag_Tv_TitlePlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/DynamicDataAct_Tv_TitleLabel"
            app:layout_constraintStart_toEndOf="@+id/DynamicDataAct_Tv_TitleLabel" />


        <TextView
            android:id="@+id/DynamicDataFrag_Tv_SerieLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Série:"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/DynamicDataFrag_Iv_BookCoverPlaceholder"
            app:layout_constraintTop_toBottomOf="@+id/DynamicDataAct_Tv_TitleLabel" />

        <TextView
            android:id="@+id/DynamicDataFrag_Tv_SeriePlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/DynamicDataFrag_Tv_SerieLabel"
            app:layout_constraintStart_toEndOf="@+id/DynamicDataFrag_Tv_SerieLabel" />


        <TextView
            android:id="@+id/DynamicDataFrag_Tv_AutorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Autor:"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/DynamicDataFrag_Iv_BookCoverPlaceholder"
            app:layout_constraintTop_toBottomOf="@+id/DynamicDataFrag_Tv_SerieLabel" />

        <TextView
            android:id="@+id/DynamicDataFrag_Tv_AutorPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/DynamicDataFrag_Tv_AutorLabel"
            app:layout_constraintStart_toEndOf="@+id/DynamicDataFrag_Tv_AutorLabel" />

        <TextView
            android:id="@+id/DynamicDataFrag_Tv_AnoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Ano:"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/DynamicDataFrag_Iv_BookCoverPlaceholder"
            app:layout_constraintTop_toBottomOf="@+id/DynamicDataFrag_Tv_AutorLabel" />

        <TextView
            android:id="@+id/DynamicDataFrag_Tv_AnoPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/DynamicDataFrag_Tv_AnoLabel"
            app:layout_constraintStart_toEndOf="@+id/DynamicDataFrag_Tv_AnoLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>